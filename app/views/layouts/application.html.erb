<!DOCTYPE html>
<html>
  <head>

    <title>Q-Coffee - Encontre o melhor caf√©</title>
    <%= favicon_link_tag %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  
    

    <% if content_for?(:head) %>
      <%= yield(:head) %>
    <% else %>
      <meta property="og:url"           content="https://www.qcoffee.app" />
      <meta property="og:type"          content="website" />
      <meta property="og:title"         content="Q-Coffee" />
      <meta property="og:description"   content="Descubra seu cafe" />
      <meta property="og:image"         content="https://images.unsplash.com/photo-1511920170033-f8396924c348?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" />
    <% end %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>
  
  <body>
    <%= render 'shared/flashes' %>
    <div>
      <%= yield %>
    </div>
    <div style='margin-top: 70px;'>
      <%= render 'shared/navbar' %>
    </div>
  </body>
</html>
