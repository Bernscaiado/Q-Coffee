<div class= "container-cards">
  <% @selection.each_with_index do |select, index| %>
    <%= "Perfil #{@category_sensory[index]}"%>
    <div class="card-category w-100" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1493606278519-11aa9f86e40a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80)">
      <% select[0..2].each do |cafe|%>
       <p><%= link_to cafe.name, cafe %></p>
      <% end %>
    </div>
  <% end %>
</div>
