<div class="head-category">
  <h4>Torra</h4>
</div>

<div class= "container-sub-categories">
  <% @selection.each_with_index do |select, index| %>
    <h4><strong><%= "Torra #{@category_roast[index]}"%></strong></h4>
    <% select[0..1].each do |cafe|%>
      <div class="card-product-category">
        <%= image_tag "coffee-pack.png",style:"width: 150px; height: 150px; crop: :fill"%>
        <div class="card-product-info-category">
          <h5><strong><%= link_to cafe.name, cafe %></strong></h5>
          <h6><%= cafe.brand %></h6>
          <h6>Torra: <%= cafe.roast %></h6>
        </div>
      </div>
    <% end %>
    Ver todos
  <% end %>
</div>
