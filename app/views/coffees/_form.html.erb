<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-login">
        <h2>Adicione um novo caf√©</h2>
        <%= simple_form_for @coffee do |f| %>
          <%= f.input :name, label: 'Nome' %>
          <%= f.input :brand, label: 'Marca' %>
          <%= f.input :origin_id, collection: @origin, label: 'Origem' %>
          <%= f.input :farm, label: 'Produtor' %>
          <%= f.input :sensory, collection: @sensory, label: 'Perfil Sensorial' %>
          <%= f.input :taste, collection: @taste, label: 'Gosto' %>
          <%= f.input :roast, collection: @roast, label: 'Tipo de Torra' %>
          <%= f.button :submit, "Adicionar" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
