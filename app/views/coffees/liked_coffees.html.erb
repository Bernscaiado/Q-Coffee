<div class="container mt-3">
  <% if @likes.empty? %>
    <h3>Não existem cafés favoritados</h3>
  <% else %>
  <h3>Meus cafés favoritos</h3>
    <% @likes.each do |like| %>
      <li class="list-group-item d-flex justify-content-between align-items-center mb-3">
        <%= link_to like.coffee.name, coffee_path(like.coffee), style:"color: grey; &:hover: black;" %>
        <%= like.coffee.brand %>
      </li>
    <% end %>
  <% end %>
</div>
