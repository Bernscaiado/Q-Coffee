<div class="container bg-white pt-4 ">
  <div class="row justify-content-center">
    <img class="avatar" src="https://images.unsplash.com/photo-1579454824457-8f6bf05a597c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=889&q=80">
  </div>
  <br>
  <div class="text-center">
    <h5><strong>-<%= @user.first_name %>-</strong></h5>
    <p><%= @user.about %></p>
  </div>
  <div class="row justify-content-center">
    <div class="mr-3 text-center">
      <h6> <%= @user.following.count %></h6>
      <h6>Seguindo</h6>
    </div>
    <div class="ml-3 text-center"">
      <h6> <%= @user.followers.count %></h6>
       <h6>Seguidores</h6>
    </div>
  </div>

  <div class="card">
    <ul class="list-group">
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to my_coffees_path(@user) do %>
          <%= image_tag('copo-cafe.png', style:"width: 30px;")%>
          Meus cafés
        <% end %>
          <%= @coffees.count%>
      </li>

      <li class="list-group-item d-flex justify-content-between align-items-center">
       <%= link_to my_reviews_path(@user) do %>
          <%= image_tag('elearning.png', style:"width: 30px;")%>
          Minhas reviews
        <% end %>
          <%= @reviews.count%>
      </li>

      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to liked_coffees_path(@user) do %>
          <%= image_tag('grao.png', style:"width: 30px;")%>
          Meus favoritos
        <% end %>
          <%= @likes.count%>
      </li>

      <% if user_signed_in? %>

        <% if current_user == @user %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= link_to new_coffee_path do %>
              <%= image_tag('saco.png', style:"width: 30px;")%>
              Adicionar café
            <% end %>
          </li>

          <li class="list-group-item d-flex justify-content-between align-items-center mb-3">
            <%= link_to edit_user_registration_path do %>
              <%= image_tag('lapis.png', style:"width: 30px;")%>
              Editar perfil
            <% end %>
          </li>

         <% if current_user == @user %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= link_to "Sair da minha conta", destroy_user_session_path, method: :delete %>
            <% end %>
          </li>
        <% else %>
          <div>
            <% if @user.followers.exists? current_user.id %>
              <li  id="unfollow" class="list-group-item d-flex justify-content-between align-items-center">
                <%= link_to "Deixar de seguir", unfollow_user_path, method: :post %>
              </li>
            <% else %>
              <li  id="follow" class="list-group-item d-flex justify-content-between align-items-center">
                <%= link_to "Seguir", follow_user_path, method: :post %>
              </li>
            <% end %>
          </div>
        <% end %>

      <% end %>
    </ul>
  </div>
</div>
